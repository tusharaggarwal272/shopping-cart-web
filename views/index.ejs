<%- include("./partials/header") %>
    <%- include("./partials/navbar") %>

        <main class="container">
            <h1 class="display-5">Shopping Cart</h1>
            

            <%- include("./partials/flash") %>
            
            <div class="container">
                <div class="row">
                    <%for(let product of products){%>
                        <div class="col-lg-4 col-md-6">
                            <div class="card" style="width: 18rem;">
                                <img src="<%=product.img%>" class="card-img-top" alt="Product">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%=product.name%>
                                    </h5>
                                    <p class="card-text">
                                        <%=product.desc.substring(0,120)%>
                                    </p>
                                    <h5 class="card-title">
                                        <i class="fas fa-rupee-sign"></i>
                                        <%=product.price%>
                                    </h5>
                                    <a type="button" class="btn btn-outline-primary" href="/products/<%=product._id%>">Buy Now</a>

                                </div>
                            </div>
                        </div>
                        <%}%>
                </div>
            </div>
        </main>

        <%- include("./partials/footer") %>